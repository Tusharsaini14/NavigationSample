<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/specifyAmount_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpecifyAmountFragment" >

    <EditText
        android:id="@+id/editTextTextAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Amount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Amount"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextAmount"
        app:layout_constraintStart_toStartOf="@+id/editTextTextAmount" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Send"
        app:layout_constraintStart_toStartOf="@+id/editTextTextAmount"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextAmount" />

    <Button
        android:id="@+id/cancelAmount_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextAmount"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextAmount" />
</androidx.constraintlayout.widget.ConstraintLayout>